{% extends "login-base.html.j2" %}

{% set title = "Login Form" %}

{% block content %}    
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="text-center"><br><strong><span style="color: rgb(220, 68, 1);">hket plus會員登記</span></strong><br><br></h1>
                </div>
            </div>
        </div>
        <div class="container">
            {% with messages = get_flashed_messages(with_categories=true) %}
                {% if messages %}
                    {% for category, message in messages %}
                        <div class="alert alert-{{ category }} text-center my-4" role="alert">{{ message }}</div>
                    {% endfor %}
                {% endif %}
            {% endwith %}
        </div>    
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="width: 40%;">
                    <h6 class="text-end d-xxl-flex justify-content-xxl-end align-items-xxl-center" style="height: 30px;width: 100%;text-align: right;"><strong>姓名</strong><br><br><br></h6>
                </div>
                <div class="col-md-6" style="width: 60%;"><input class="form-control" type="text" name="name" style="width: 300px;"></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="height: 45px;">
                        <p style="text-align: center;"><span style="color: rgb(115, 115, 115);">( 不多於30個位的英文字母或數字 )</span></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="width: 40%;">
                    <h6 class="text-end d-xxl-flex justify-content-xxl-end align-items-xxl-center" style="height: 30px;width: 100%;text-align: center;"><strong><span style="color: rgb(51, 51, 51);">登入電郵</span></strong></h6>
                </div>
                <div class="col-md-6" style="width: 60%;"><input class="form-control d-xxl-flex" type="email" name="email1" style="width: 300px;"></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="height: 45px;">
                        <p style="text-align: center;"><span style="color: rgb(115, 115, 115);">(電郵地址不能重複登記 )</span></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="width: 40%;">
                    <h6 class="text-end d-xxl-flex justify-content-xxl-end align-items-xxl-center" style="height: 30px;width: 100%;text-align: center;"><strong><span style="color: rgb(51, 51, 51);">登入電郵</span></strong><br><strong><span style="color: rgb(51, 51, 51);">(重複輸入)</span></strong><br><br></h6>
                </div>
                <div class="col-md-6" style="width: 60%;"><input class="form-control d-xxl-flex" type="email" name="email2" style="width: 300px;"></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="height: 30px;"></div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="width: 40%;">
                    <h6 class="text-end d-xxl-flex justify-content-xxl-end align-items-xxl-center" style="height: 30px;width: 100%;text-align: right;"><strong><span style="color: rgb(51, 51, 51);">密碼</span></strong><br><br><br></h6>
                </div>
                <div class="col-md-6" style="width: 60%;"><input class="form-control d-xxl-flex" type="password" name="password1" style="width: 300px;"></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="height: 30px;"></div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6" style="width: 40%;">
                    <h6 class="text-end d-xxl-flex justify-content-xxl-end align-items-xxl-center" style="height: 30px;width: 100%;text-align: right;"><strong><span style="color: rgb(51, 51, 51); background-color: var(--bs-body-bg);">登入密碼(重複輸入)&nbsp;</span></strong><br><br><br></h6>
                </div>
                <div class="col-md-6" style="width: 60%;"><input class="form-control d-xxl-flex" type="password" name="password2" style="width: 300px;height: auto;"></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="height: 75px;"></div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-light navbar-expand-md">
            <div class="container-fluid"><a class="btn btn-primary" role="button" style="color: #fc6a00;background: #ffffff;border-radius: 1px;border-color: #fc6a00;width: 5%;margin-left: auto;margin-right: 5%;" href="{{url_for('index')}}">取消</a><button class="btn btn-primary" type="submit" style="color: var(--bs-btn-disabled-color);background: #fc6a00;border-radius: 0px;width: 5%;margin-right: auto;margin-left: 5%;">註冊</button></div>
        </nav>
        <br><br><br><br><br>
    </form> 
{% endblock %}    